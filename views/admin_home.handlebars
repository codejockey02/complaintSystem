<!DOCTYPE html>
<html>
     <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif; 
            margin:0;
            height: 758px;
            background-image: linear-gradient(white,skyblue);
            background-repeat:no-repeat;
        }
        .tnav {
          overflow: hidden;
          background-color: black;
       }
        
        .tnav a {
            float: left;
            color: white;
            text-align: center;
            padding: 20px 20px;
            text-decoration: none;
            font-size: 20px;
        }
        
        .tnav p{
            color: black;
            font-size: 30px;
            padding:  6px 6px 6px 32px;
        }

       .tnav a:hover {
            color: white;
            background-color:grey;
         }
        
        .local{
            margin-left:50px;
            margin-top: 20px;
        }

        .local p{
            font-size: 25px;
            font-family: serif;
        }

    .bg-img{
        background-image: linear-gradient(white,lightsteelblue);
        height:583px;
        background-attachment: fixed;
        background-size:100% 100%;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
    }
    table{
        width: 80%;
        margin-left: 100px;
    }

    td{
        text-align: center;
        padding: 5px;
    }

    tr:nth-child(even){
        background-color: white;
    }

    th{
        background-color: darkslategray;
        color: white;
        text-align: center;
        padding: 8px;
    }
    
    tr:hover{
        background-color:#f5f5f5;
    }

    .button {
    background-color:#008CBA;
    border-radius: 12px;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: block;
    font-size: 16px;
    margin: auto;
    cursor: pointer;
    float: center;
    }

    .button:hover {background-color: #e7e7e7; color: black}

    </style>
    <body>
        <div class="tnav">
            <a href="adminhome">Home</a>
            <a href="staffs">Staff</a>
            <a href="assigntask">Assign Tasks</a>
            <a href="info">Info</a>
            <a href="adminlogin" style="float:right" >Logout</a>
        </div>
        
        <div class="local">
            <b><p id="name"></p><b>
       </div>

       <div class="bg-img">
    <h1 style="text-align: center">Complaints</h1>
    <br>
    <table>
        <tr>
            <th rowspan="2">Complaint ID</th>
            <th rowspan="2">Name</th>
            <th rowspan="2">Registration No.</th>
            <th rowspan="2">Date</th>
            <th rowspan="2">Complaint Type</th>
            <th colspan="2">Free Hours</th>
            <th rowspan="2">Block</th>
            <th rowspan="2">Room No.</th>
            <th rowspan="2">Status</th>
        </tr>
        <tr>
            <th>From</th>
            <th>To</th>
        </tr>
        
        <tr>
            {{#each requests}}
            <td>{{_id}}</td>
            <td>{{name}}</td>
            <td>{{reg}}</td>
            <td>{{date}}</td>
            <td>{{issue}}t</td>
            <td>{{time}}</td>
            <td>{{ttime}}</td>
            <td>{{Block}}</td>
            <td>{{room}}</td>
            <td>{{status}}</td>
        </tr>
        {{/each}}
    </table><br><br><br>
    <form action="adminhome" method="POST">
            <button type="submit" class="button" align="middle">Click here to see the Details</button>
        </form>
    </div>


<script type="text/javascript">
    
    document.getElementById("name").innerHTML = "Hello , " +localStorage.getItem("lastname");
</script>
    </body>
</html>