        <script>
            var genderByBlock = {
        Female: ["A Block", "B Block", "C Block", "D Block", "E Block", "E-Annex", "F Block"],
        Male: ["A Block", "B Block", "B-Annex", "C Block", "D Block", "D-Annex", "E Block", "F Block", "G-Block", "H-Block", "J-Block", "K-Block", "L-Block", "M-Block", "N-Block", "P-Block", "Q-Block"]
    }

        function changeBlock(value) {
            if (value.length == 0) document.getElementById("Block").innerHTML = "<option></option>";
            else {
                var catOptions = "";
                for (categoryId in genderByBlock[value]) {
                    catOptions += "<option>" + genderByBlock[value][categoryId] + "</option>";
                }
                document.getElementById("Block").innerHTML = catOptions;
            }
        }

            function validatePassword(){
                            var x = document.getElementById("pwd").value;
                            var y = document.getElementById("cpwd").value;
                            if(x!=y){
                                    text1 = "Passwords don't match, enter a valid password";
                                    } 
                            else{
                                  text1="";
                            }
    document.getElementById("msg").innerHTML=text1;
    }
        function scorePassword(pass) {
        var score = 0;
        var p = new Array();

        p[0]="";
        p[1]="";
        p[2]="very weak";
        p[3]="weak";
        p[4]="good";
        p[5]="Strong";

    if(pass.length > 5) score++;
    if(pass.match(/[a-z]/)) score++;
    if(pass.match(/[A-Z]/)) score++;
    if(pass.match(/\d+/)) score++;
    if(pass.length > 8) score++;
            
    document.getElementById("msg1").innerHTML = p[score];
    }
        </script>
