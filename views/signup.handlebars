    <form action="/signup" style="border:1px solid #ccc;" method="POST">
         
          <div class="container">

        <h1>Sign Up</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <div class="row">
            <div class="column">

         <i class="fa fa-id-card icon"></i>
        <label for="regno"><b>Registration Number:</b></label>
              <input class="input-field" type="text" placeholder="Enter Your Registration Number" name="regno" minlength="9" maxlength="9" required><br>

          <i class="fa fa-user icon" style="font-size:20px;"></i>
        <label for="name"><b>Name:</b></label><br>
        <input type="text" placeholder="example: Jane Doe" name="name" required><br>

           <i class="fa fa-key icon" style="font-size:20px"></i>
          <label for="pwd"><b>Password:</b></label><br>
              <input type="password" placeholder="An uppercase, a lowercase, a digit, length > 8" name="pwd" id="pwd" onkeyup="scorePassword(this.value)" required><span id="msg1"></span><br><br>

          <i class="fa fa-key icon" style="font-size:20px"></i>
        <label for="cpwd"><b>Confirm Password:</b></label><br>
        <input type="password" placeholder="Confirm Password" name="cpwd" id="cpwd" onkeyup="validatePassword()" required><br><span id="msg"></span><br>

        <i class="material-icons icon" style="font-size:20px;">group</i>     
        <label for="gender"><b>Gender:</b></label><br><br>
          <select class="dropbtn" id="gender" name="gender" onChange="changeBlock(this.value);">
               <option value="" disabled selected>Select</option>
              <option value="Female">Female</option>
              <option value="Male">Male</option>
                </select><br><br></div>

