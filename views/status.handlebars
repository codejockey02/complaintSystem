<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
    
    * {
        box-sizing: border-box;
        padding: 0px;
        margin:0px;
    }
    
    table{
        width: 80%;
        margin-left: 100px;
    }

    td{
        text-align: center;
        padding: 5px;
    }

    tr:nth-child(even){
        background-color: white;
    }

    th{
        background-color: darkslategray;
        color: white;
        text-align: center;
        padding: 8px;
    }
    
    tr:hover{
        background-color:#f5f5f5;
    }
    
    .bg-img{
        background-image: linear-gradient(white,lightsteelblue);
        height:583px;
        background-attachment: fixed;
        background-size:100% 100%;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
    }
    
    .topnav{
        overflow: hidden;
        background-color: black;
    }
    
    .topnav a{
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 20px 20px;
        text-decoration: none;
        font-size: 20px;
        font-weight: bold;
    }

    .topnav a:hover{
        background-color: #333;
        color: whitesmoke;
    }

    .button {
    background-color:#008CBA;
    border-radius: 12px;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: block;
    font-size: 16px;
    margin: auto;
    cursor: pointer;
    float: center;
    }

    .button:hover {background-color: #e7e7e7; color: black}
</style>

<body>
    
    
        
    
    <div class="topnav">
        <a href="pickacomplaint">Home</a>
            <a href="complainthistory">Complaint history</a>
            <a href="status">Status</a>
            <a href="login" style="float:right">Logout</a>
    </div>
    
    <div class="bg-img">
    <br>
    <h1 style="text-align: center">Compaint Status</h1>
    <br>
    <table>
       <tr>
            <th rowspan="2">Complaint ID</th>
            <th rowspan="2">Name</th>
            <th rowspan="2">Registration No.</th>
            <th rowspan="2">Date</th>
            <th rowspan="2">Complaint Type</th>
            <th colspan="2">Free Hours</th>
            <th rowspan="2">Block</th>
            <th rowspan="2">Room No.</th>
            <th rowspan="2">Status</th>
        </tr>
        <tr>
            <th>From</th>
            <th>To</th>
        </tr>
            {{#each requests}}
            <tr>
            <td>{{_id}}</td>
            <td>{{name}}</td>
            <td>{{reg}}</td>
            <td>{{date}}</td>
            <td>{{issue}}</td>
            <td>{{time}}</td>
            <td>{{ttime}}</td>
            <td>{{Block}}</td>
            <td>{{room}}</td>
            <td>{{status}}</td>
            </tr>
            {{/each}}
    </table><br><br><br>
    <form action="/status" method="POST">
    <input type="text"  id ="em" name="email" value="3" style="display: none">
    <button type= "submit" class="button">Check The Status</button>
    </form>
    </div>

<script>

(function (){
    window.hello_world = function(){
        document.getElementById("em").value = localStorage.getItem("Email");
    }
})();

hello_world();


</script>
</body>
</html>